<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>net452</TargetFramework>
    <Description>dotnet new templates targeting Particular tools and libraries</Description>
    <IncludeBuildOutput>false</IncludeBuildOutput>
    <PackageType>Template</PackageType>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="Particular.Packaging" Version="0.1.0" PrivateAssets="All" />
  </ItemGroup>

  <ItemGroup>
    <None Include="..\Templates\**\*.*" Exclude="**\bin\**\*.*;**\obj\**\*.*;**\Directory.Build.props" Pack="true" PackagePath="content" />
  </ItemGroup>

  <ItemGroup>
    <None Include="..\ServiceHelperClassic.cs" Pack="true" PackagePath="content\NServiceBusWindowsService" />
    <None Include="..\ServiceHelperCore.cs" Pack="true" PackagePath="content\NServiceBusWindowsService" />
  </ItemGroup>

  <ItemGroup>
    <None Include="..\ServiceHelperClassic.cs" Pack="true" PackagePath="content\ScAdapterService" />
    <None Include="..\ServiceHelperCore.cs" Pack="true" PackagePath="content\ScAdapterService" />
  </ItemGroup>

</Project>